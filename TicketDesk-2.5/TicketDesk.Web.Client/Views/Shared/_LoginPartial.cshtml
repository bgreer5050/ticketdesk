@using Microsoft.AspNet.Identity
@using TicketDesk.Web.Identity


<li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <i class="fa fa-user"></i>
        @(User.Identity.IsAuthenticated ? User.Identity.GetUserDisplayName() : "Account")
        <span class="caret"></span>
    </a>
    <ul class="dropdown-menu" role="menu">
        @if (Request.IsAuthenticated)
        {
            <li>
                @Html.ActionLink("My Account", "Index", "Manage", routeValues: new { area = "" }, htmlAttributes: new { title = "Manage" })
            </li>
            <li>
                @Html.ActionLink("Log Off", "LogOff", "Account", routeValues: new { area = "" }, htmlAttributes: new { title = "LogOff" })
            </li>
        }
        else
        {

            <li>@Html.ActionLink("Register", "Register", "Account", routeValues: new { area = "" }, htmlAttributes: new { id = "registerLink" })</li>
            <li>@Html.ActionLink("Log In", "Login", "Account", routeValues: new { area = "" }, htmlAttributes: new { id = "loginLink" })</li>
        }
    </ul>

</li>

